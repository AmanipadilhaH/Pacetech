algoritmo "salario"
// Função : Aumento de salario
// Autor : Amani Padilha
// Data : 17/05/2022
// Seção de Declarações
var
Salario: real
SalarioFinal: real

inicio
   escreva("Informe seu salário atual: R$: ")
   leia (Salario)
   SalarioFinal <- Salario * 1.3)
   escreval ("Seu salário com reajuste de 30% é : R$",SalarioFinal)
fimalgoritmo
